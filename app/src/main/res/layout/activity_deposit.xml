<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositActivity">

    <TextView
        android:id="@+id/textViewBoxName"
        android:layout_width="349dp"
        android:layout_height="27dp"
        android:text="Please deposit  the item at Box #4 UTS LIBRARY Foyer"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="27dp" />

    <ImageView
        android:id="@+id/imageViewDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="54dp" />

    <Button
        android:id="@+id/buttonLockBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock my Box"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="153dp" />
</android.support.constraint.ConstraintLayout>